---
import BaseHead from "@components/BaseHead.astro"
import Header from "@components/Header.astro"
import RecipePreview from "@components/RecipePreview.astro"
import type { Recipe } from "src/types/recipe"

const title = "Recept"
const description = "Filip & Ida TammergÃ¥rds receptsamling ðŸ˜‹"
const permalink = Astro.url.href
const recipes = await Astro.glob("./*.md")
---

<html lang="sv">
	<head>
		<BaseHead title={title} description={description} permalink={permalink} />

		<style>
			.wrapper {
				margin-bottom: 8rem;
			}

			.intro {
				margin-top: 6rem;
				padding-bottom: 2rem;
				margin-bottom: 2rem;
				border-bottom: 4px solid var(--theme-divider);
			}

			.title {
				margin: 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main class="wrapper">
			<section class="intro" aria-labelledby="title">
				<h1 class="title">{title}</h1>
				<p>{description}</p>
			</section>
			<section aria-label="Receptsamling">
				{
					recipes.map((recipe) => (
						<RecipePreview recipe={recipe as any as Recipe} />
					))
				}
			</section>
		</main>
	</body>
</html>
